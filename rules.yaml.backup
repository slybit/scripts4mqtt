2aa39194692c:
  name: Test
  condition:
    type: or
    condition:
      - type: mqtt
        trigger: always
        options:
          topic: knx/status/0/1/201
          eval: '{{M.val}} == 1'
      - type: cron
        trigger: always
        options:
          'on': '* * * * *'
          'off': '*/2 * * * *'
  ontrue:
    - type: script
      script: 'var a = get(''a'', 0); a = a+1; put(''a'', a); log.info(a);'
    - type: mqtt
      topic: knx/set/0/0/108
      val: 0
    - type: email
      to: seys.stefaan@gmail.com
      subject: test from scripts4mqtt
      body: <b>Boom!</b>
  onfalse:
    - type: script
      script: 'var a = get(''a'', 0); a = a+1; put(''a'', a); log.info(a);'
    - type: mqtt
      topic: knx/set/0/0/108
      val: 0
